{   
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": 
    {     
        "target": "es5",
        "module": "commonjs",
        "rootDir": "./src", // Specify the source directory of TypeScript files
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
     },
    "include": ["src"],
    "exclude": ["node_modules"]
}